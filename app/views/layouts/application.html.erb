<!DOCTYPE html>
<html>
<head>
  <title>LeadManager</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= link_to "Configuration", salesforce_configuration_path %>
	<%= link_to "Leads", leads_path %>
	<% if current_user %>
		
		<%= link_to 'Exit', destroy_user_session_path, :method=>'delete', :class => "fa fa-sign-out" %>
		User: <%= current_user.email %>
	<% end %>

	
<%= yield %>

</body>
</html>
